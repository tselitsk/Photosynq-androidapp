<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent" >
   
     <TextView
        android1:id="@+id/tvPD"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_alignParentTop="true"
       	android:textSize="20dp"
       	android:textStyle="bold"
       	android1:layout_marginLeft="28dp"
        android:textColor="#000000"
        android1:text="Paired Devices:" 
      />
     
    <ListView
        android:id="@+id/listView1"
        android1:layout_marginLeft="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPD" 
        android:layout_marginBottom="30dp"
  	>
    </ListView>
    <TextView
        android1:id="@+id/results_tv"
        android:layout_below="@id/listView1"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_marginLeft="28dp"
        android:textColor="#000000"
        android:maxLines="20"
        android:textSize="20dp"
       	android:textStyle="bold"
        android:text="Results:"
      />
    
     <TextView
        android1:id="@+id/input_tv"
        android:layout_below="@id/results_tv"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_marginLeft="28dp"
        android:textColor="#000000"
        android:maxLines="20"
      />

    <Button
        android:id="@+id/bConnectionNew"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
   		android1:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        style="@style/Green_Button_Style"
        android:onClick="finish_Click"
        android:text="finish" 
       />
    
</RelativeLayout>