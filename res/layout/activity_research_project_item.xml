<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
 >
	<RelativeLayout
	    	android:id="@+id/topLayout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:orientation="horizontal"
	        android:layout_marginBottom="20dp"
	        android:background="@drawable/green_rectangle"
	 >
		
		   <ImageView
	     	android:id="@+id/imageView1"
	     	android:layout_marginTop="5dp"
	     	android:layout_marginLeft="10dp"
	     	android:layout_marginRight="40dp"
	     	android:layout_marginBottom="5dp"
	   	 	android:layout_width="50dp"
	    	android:layout_height="50dp"
	    	android:layout_alignParentTop="true"
	    	android:layout_alignParentLeft="true"
	    	android:src="@drawable/simple_leaf"
	     />
		   <TextView
	    	android:id="@+id/num_Of_collaborators_tv"
	    	android:layout_marginLeft="20dp"
	     	android:layout_marginRight="20dp"
	     	android:layout_marginBottom="5dp"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_below="@id/imageView1"
	    	android:textColor="@color/dark_grey"
	    	android:text="#+number of collaborators"
	     />
		    
		      	<TextView
		      	android:layout_marginTop="10dp"
	     		android:layout_marginBottom="0dp"
		         android:id="@+id/nameofProject_txtView"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:textStyle="bold"
		         android:textSize="15dp"
		          android:textColor="@color/dark_grey"
		         android:layout_toRightOf="@id/imageView1"
		         android:text="Name of Project" />

		     <TextView
		         android:id="@+id/nameOfPerson_tv"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		          android:textColor="@color/dark_grey"
		         android:layout_toRightOf="@id/imageView1"
		         android:layout_below="@id/nameofProject_txtView"
		         android:text="Name of Person" /> 
		         
		</RelativeLayout>    
		

		<TextView
		    android:id="@+id/description_header_tv"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="5dp"
		    android:textStyle="bold"
		    android:textColor="@color/dark_grey"
		    android:layout_below="@id/topLayout"
		    android:layout_marginLeft="20dp"
		    android:textSize="20dp"
		    android:text="Description" />
		
	<TextView
	    android:id="@+id/description_content_tv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#000000"
	    android:layout_below="@id/description_header_tv"
	    android:layout_marginBottom="5dp"
	    android:layout_marginLeft="20dp"
	    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit et tincidunt varius,.." />
		  

	<TextView
	    android:id="@+id/data_capture_time_tv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Data Capture Time"
	    android:textSize="20dp"
	    android:layout_marginBottom="5dp"
	    android:layout_marginLeft="20dp"
	    android:layout_below="@id/description_content_tv"
	    android:textColor="#000000"
	    android:textStyle="bold"
	    
	    />

	<TextView
	    android:id="@+id/data_capture_time_results_tv"
	    android:layout_marginBottom="5dp"
	    android:layout_marginLeft="20dp"
	    android:layout_below="@id/data_capture_time_tv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#000000"
	    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit et tincidunt varius.." 
	  />

	<TextView
	    android:id="@+id/requirement_tv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="5dp"
	    android:layout_marginLeft="20dp"
	    android:layout_below="@id/data_capture_time_results_tv"
	    android:textSize="20dp"
	    android:textStyle="bold"
	    android:textColor="#000000"
	    android:text="Requirement:" />
	
	<TableLayout
	    android:id="@+id/tablelayout1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dp"
	    android:stretchColumns="*"
	    android:layout_below="@id/requirement_tv"
	    android:layout_marginBottom="110dp"
	     >

	    <TableRow
	        android:id="@+id/tableRow2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
			 <TextView
		    android:id="@+id/textView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#000000"
		    android:hint="Location"
		    />
			 
			<TextView
		    android:id="@+id/textView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#000000"
		    android:hint="Species"
		    />
		     
	    </TableRow>
	    
	       <TableRow
	        android:id="@+id/tableRow2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
			  
	            <TextView
		    android:id="@+id/textView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#000000"
		    android:hint="Time Of Year"
		    />
			 
			  <TextView
		    android:id="@+id/textView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#000000"
		    android:hint="Time Of Day"
		    />
		     
	    </TableRow>

	</TableLayout>

	<Button
	    android:id="@+id/participate_btn"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:layout_width="200dp"
    	android:textColor="#000000"
    	android:textSize="20dp"
	    android:layout_below="@id/tablelayout1"
	    android:layout_centerHorizontal="true"
	    android:onClick="on_click"
	    style="@style/Green_Button_Style"
	    android:text="Participate" />

</RelativeLayout>